extends ../layout.pug

block meta
    - var title = `LZ#${network.networkID} ${network.hash.slice(0,6)}`
    - var identicon = `${http_host}/static/networks/${network.hash}.png`
    meta(property="og:title" content=`${title}`)
    meta(property="og:type" content="website")
    meta(property="og:url" content=`${http_host}/networks/${network.hash}`)
    meta(property="og:image" content=`${identicon}`)
    script(src="/static/timeago.js")
block script
    script.
        var since = jQuery(".time-ago");
        since.text(deltaToAgo(Date.now() - +since.text()));

block content
    div.row.mt-4
        div.col-md-3
            div.card.border-0
                img.card-img-top(src=`${identicon}` alt=`${title}`)
                div.card-header
                    h2.text-center #{title}
                    a.btn.btn-light.btn-block.border-dark(href=`${http_host}/networks/${network.hash}.gz`) Download
                ul.list-group.list-group-flush
                    li.list-group-item Since
                        span.float-right.time-ago #{parseInt(network._id.toString().slice(0, 8), 16) * 1000}
                            
                    li.list-group-item Architecture 
                        span.float-right #{network.filters}x#{network.blocks}
                    li.list-group-item Training 
                        span.float-right #{network.training_count}  #{network.training_steps ? "+" + network.training_steps : ""}
                    li.list-group-item #{network.description}

        div(class="col-md-9")
            ul(class="nav nav-tabs" role="tablist")
                li(class="nav-item")
                    a(class="nav-link active" href="#match-games" data-toggle="tab") Match Games
                li(class="nav-item")
                    a(class="nav-link" href="#self-play-games" data-toggle="tab") Self-Play Games 
                        <span class="badge badge-secondary">#{network.game_count}</span>
                
            div(class="tab-content pt-4")
                div(class="tab-pane fade show active" id="match-games" role="tabpanel")
                    div(class="jumbotron")
                        h3 Match games coming sooooon ...
                div(class="tab-pane fade" id="self-play-games" role="tabpanel") 
                    div(class="jumbotron")
                        h3 Self-play games coming sooooon too...
            